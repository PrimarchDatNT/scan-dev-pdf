<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp30"
        android:layout_marginEnd="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp30"
        android:background="@drawable/home_shape_dialog_sort"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_to_pdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp20"
            android:paddingTop="@dimen/dp14"
            android:paddingBottom="@dimen/dp14"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AllButtonIcon"
                android:src="@drawable/home_vector_sendto_option_pdf"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/AllDialogPdfSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp14"
                android:text="@string/home_send_to_pdf"
                android:textAllCaps="true" />

            <TextView
                android:id="@+id/tv_size_pdf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp6"
                android:text="@string/home_send_to_size_mb"
                android:textColor="@color/color_text_gray_3"
                android:textSize="@dimen/sp14"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />


        <LinearLayout
            android:id="@+id/ll_to_jpg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp20"
            android:paddingTop="@dimen/dp14"
            android:paddingBottom="@dimen/dp14"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AllButtonIcon"
                android:src="@drawable/home_vector_sendto_option_jpg"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AllDialogPdfSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp14"
                android:text="@string/home_send_to_jpg"
                android:textAllCaps="true" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_size_jpg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp6"
                android:text="@string/home_send_to_size_mb"
                android:textColor="@color/color_text_gray_3"
                android:textSize="@dimen/sp14"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp60"
            android:background="@color/color_line" />

        <LinearLayout
            android:id="@+id/ll_jpg_save_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp60"
            android:paddingTop="@dimen/dp14"
            android:paddingBottom="@dimen/dp14"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AllButtonIcon"
                android:padding="4dp"
                android:src="@drawable/home_vector_sendto_gallery"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AllDialogPdfSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp14"
                android:text="@string/home_share_to_gallery"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp60"
            android:background="@color/color_line" />

        <LinearLayout
            android:id="@+id/ll_jpg_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp60"
            android:paddingTop="@dimen/dp14"
            android:paddingBottom="@dimen/dp14"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatImageView
                style="@style/AllButtonIcon"
                android:padding="4dp"
                android:src="@drawable/all_vector_sendto_share"
                tools:ignore="ContentDescription" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/AllDialogPdfSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingStart="@dimen/dp14"
                android:text="@string/home_send_to"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/sp12" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>